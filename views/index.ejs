<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Spark Events</title>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }
    .table {
      background-color: white;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .table th {
      background-color: #007bff;
      color: white;
    }
    .btn-custom {
      background-color: #007bff;
      color: white;
    }
    .btn-custom:hover {
      background-color: #0056b3;
      color: white;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Spark Events</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addquotation">Add new Quotation</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/Login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Registration">Register</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h2 class="text-center mb-4">All Events</h2>
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Event Title</th>
            <th>Event Image</th>
            <th>Event Description</th>
            <th>Event Date</th>
            <th>Event Price</th>
            <th>Phone Number</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < events.length; i++) { %>
            <tr>
              <td><a href="/quotation/<%= events[i].eventId %>" class="text-decoration-none"><%= events[i].title %></a></td>
              <td><img src="<%= events[i].image %>" class="img-thumbnail" style="max-width: 100px;"></td>
              <td><%= events[i].description %></td>
              <td><%= events[i].date.toLocaleDateString("en-US",{year:"numeric",month:"short",day:"numeric"}) %></td>
              <td>$<%= events[i].price.toFixed(2) %></td>
              <td><%= events[i].phone_number %></td>
              <td>
                <a href="/editquotation/<%= events[i].eventId %>" class="btn btn-sm btn-custom me-2">Edit</a>
                <a href="/deletequotation/<%= events[i].eventId %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this event?')">Delete</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>